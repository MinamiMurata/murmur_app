<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |form| %>
<div class="low">
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>Found <%= @post.errors.count %> errors!</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
  <% end %>

  <div class="murmur_content">
    <%= form.label :content %>
    <%= form.text_field :content%>
    <%= form.submit class: "btn btn-secondary"%>
  </div>
  <% end %>
  <p class="back_to pd_btm"><%= link_to 'Back to your Murmurs.', posts_path %></p>
</div>