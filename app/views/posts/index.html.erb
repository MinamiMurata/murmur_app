<h2>Murmurs</h2>

<p><%= notice %></p>

<div class="row justify-content-center">
  <table>
    <tr>
      <th>Recent murmurs.</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td class ="col-lg-4"><%= post.content %></td>
      <td><%= time_ago_in_words(post.created_at) %></td>
      <td><%= link_to 'Check your Murmur.', post_path(post.id) %></td>
      <td><%= link_to 'Edit your Murmur.', edit_post_path(post.id) %></td>
      <td><%= link_to 'Derete your Murmur.', post_path(post.id), method: :delete, data: { confirm: 'Are you sure you want to delete it?' } %></td>
    </tr>
    <% end %>
  </table>
</div>

<h4 class="pd_btm"><%= link_to %q{Let's post your new Murmur!}, new_post_path %></h4>